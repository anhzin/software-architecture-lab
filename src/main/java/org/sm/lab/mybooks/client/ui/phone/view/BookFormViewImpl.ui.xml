<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget">

    <m:panel.flex.RootFlexPanel>
        <m:header.HeaderPanel>
            <m:header.HeaderButton backButton="true" ui:field="backButton" />
            <g:HTML ui:field="bookDetails">Book Details</g:HTML>
        </m:header.HeaderPanel>

        <m:panel.scroll.ScrollPanel scrollingEnabledX="false">
            <g:FlowPanel>
            	<m:form.FormEntry text="Book Title">
            		<m:input.MTextBox ui:field="bookTitle" placeHolder="text"></m:input.MTextBox>
        		</m:form.FormEntry>
            	<m:form.FormEntry text="Author">
            		<m:input.MTextBox ui:field="author" placeHolder="text"></m:input.MTextBox>
        		</m:form.FormEntry>
            	<m:form.FormEntry text="Url">
            		<m:input.MTextBox ui:field="url" placeHolder="text"></m:input.MTextBox>
        		</m:form.FormEntry>
            	<m:form.FormEntry text="Start Reading Date">
            		<m:input.MTextBox ui:field="startReadingDate" placeHolder="text"></m:input.MTextBox>
        		</m:form.FormEntry>
            	<m:form.FormEntry text="End Reading Date">
            		<m:input.MTextBox ui:field="endReadingDate" placeHolder="text"></m:input.MTextBox>
        		</m:form.FormEntry>
            	<m:form.FormEntry text="Rating">
            		<m:input.MTextBox ui:field="rating" placeHolder="text"></m:input.MTextBox>
        		</m:form.FormEntry>
            </g:FlowPanel>
        </m:panel.scroll.ScrollPanel>
    </m:panel.flex.RootFlexPanel>
</ui:UiBinder>


