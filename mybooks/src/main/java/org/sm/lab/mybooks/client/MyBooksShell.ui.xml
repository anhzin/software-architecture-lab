<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateLocales='default'>

  <ui:with
    field='res'
    type='org.sm.lab.mybooks.client.resources.MyBooksWebResources' />

  <ui:style>
	 a.gwt-Anchor:link {color:#7CD6B2;}

    .linkBar {
      padding: 2px 22px 2px 0px;
      background: #3470A1;
      text-align: right;
    }
    
    .link {
      font-size: 8pt;
      line-height: 10pt;
    }
    
    .titleBar {
      padding: 0 10px;
      border-bottom: 1px solid #7CD6B2;
	  background: #3470A1;
    }
    
    .title {
      color: #7FACD2;
      font-size: 20pt;
      font-weight: bold;
      margin: 0;
      padding: 0 0 0 4px;
    }
    
    .subtitle {
      color: #5289B7;
      font-size: 16pt;
      margin: 0;
      padding: 0 0 0 6px;
    }
    
    .options {
      padding: 6px 10px 0 0;
    }
    
    .localeBox {
      color: blue;
      font-size: 8pt;
      margin-left: 4px;
    }
    
    .styleSelectionButton {
      width: 36px;
      height: 16px;
      margin: 3px 0px 0px 10px;
      padding: 0px;
    }
    
    .styleSelectionStandard {
      background: #d0e4f6;
    }
    
    .styleSelectionChrome {
      background: #ccc;
    }
    
    .styleSelectionDark {
      background: #3d3d3d;
    }
    
    .mainMenu {
      background-color: #d7dde8;
      border-right: 1px solid #7CD6B2;
    }
    
    .contentButtons {
      background-color: #7CD6B2;
      border-bottom: 1px solid #000000;
      padding: 0px 10px;
    }
    
    .contentButton {
      margin-right: 20px;
      color: #888888;
      font-weight: bold;
      cursor: hand;
      cursor: pointer;
      line-height: 20pt;
      vertical-align: middle;
    }
    
    .contentButton:hover {
      color: #4B4A4A;
      text-decoration: underline;
    }

    .contentButton:link {
      color: #888888;
    }
    
    .contentButtonSource {
      margin-right: 4px;
    }
    
    .contentList {
      font-size: 8pt;
      color: #4B4A4A;
      direction: ltr;
    }
  </ui:style>

	<g:DockLayoutPanel unit='PT'>

	    <!-- Links Bar. -->
	    <g:north size='12'>
			<g:HTMLPanel styleName='{style.linkBar}'>

	      </g:HTMLPanel>
	    </g:north>      
      
    	<!-- Title Bar. -->
    	<g:north size='55'>
      		<g:HTMLPanel styleName='{style.titleBar}'>
        		<table cellpadding='0' cellspacing='0' width='100%'>
          			<tr>
            			<td>
              				<table cellpadding='0' cellspacing='0'>
                				<tr>
                  					<td style='line-height:0px'>
                    					<a href="/"><g:Image resource='{res.logo}' /></a>
                  					</td>
                  					<td>
                    					<!-- Title and subtitle. -->
                    					<h1 class='{style.title}'><ui:msg key='mainTitle'>My Books</ui:msg></h1>
                    					<h2 class='{style.subtitle}'><ui:msg key='mainSubTitle'>My Books Server</ui:msg></h2>
                  					</td>
                				</tr>
              				</table>
            			</td>
          			</tr>
        		</table>
      		</g:HTMLPanel>
    	</g:north>
    
    	<!-- Main content area. -->
    	
    	<g:center>
       		<g:DockLayoutPanel unit='PT'>
         		<g:north size='20'>
           			<g:FlowPanel ui:field='menuButtons' styleName='{style.contentButtons}'>
             			<g:Anchor ui:field='menuBooksAnchor' href="#BookListPlace:" addStyleNames='{style.contentButton}'>
               				<ui:msg key='menuBooksMsg'>Books</ui:msg>
             			</g:Anchor>
             			<g:Anchor ui:field='menuProfileAnchor' href="#ProfilePlace:" addStyleNames='{style.contentButton}'>
               				<ui:msg key='menuProfileMsg'>Profile</ui:msg>
             			</g:Anchor>
             			<g:Anchor ui:field='menuLogoutAnchor' href="#LoginPlace:" addStyleNames='{style.contentButton}'>
               				<ui:msg key='menuLogoutMsg'>Log out</ui:msg>
             			</g:Anchor>             			
             		</g:FlowPanel>
         		</g:north>
		  		<g:center>
		  			<g:ScrollPanel ui:field='contentPanel' />
		  		</g:center>
       		</g:DockLayoutPanel>
 		</g:center>
 		
	</g:DockLayoutPanel>

</ui:UiBinder> 