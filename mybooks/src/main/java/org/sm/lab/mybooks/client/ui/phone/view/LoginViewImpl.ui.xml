<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:m="urn:import:com.googlecode.mgwt.ui.client.widget">

  <m:panel.flex.RootFlexPanel>
    <m:header.HeaderPanel>
      <g:HTML>Enter Your Credentials</g:HTML>
    </m:header.HeaderPanel>

    <m:panel.scroll.ScrollPanel scrollingEnabledX="false">
      <g:FlowPanel>
        <m:form.FormEntry text="Username">
            <m:input.MTextBox ui:field="username" placeHolder="text"></m:input.MTextBox>
        </m:form.FormEntry>    
        <m:form.FormEntry text="Password">
            <m:input.MTextBox ui:field="password" placeHolder="text"></m:input.MTextBox>
        </m:form.FormEntry>       
        <m:button.Button ui:field="login" text="Login"/>
      </g:FlowPanel>
    </m:panel.scroll.ScrollPanel>
  </m:panel.flex.RootFlexPanel>
</ui:UiBinder>
