<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c='urn:import:com.google.gwt.user.cellview.client'
	xmlns:v="urn:import:org.sm.lab.mybooks.client.ui.desktop.view" xmlns:s="urn:import:org.sm.lab.mybooks.client.ui.desktop">

	<ui:style>
		.scrollable {
		height: 560px;
		width: 300px;
		border: 1px solid
		#ccc;
		text-align: left;
		}

		.bookFormCell {
		width: 100%;
		padding-left:
		20px;
		}

		.noteFormCell {
		width: 100%;
		padding-left: 20px;
		}
	</ui:style>

	<g:HTMLPanel>

		<table>
			<tr>
				<td valign='top' align='center'>
					<table>
						<tr>
							<td valign='top' align='center'>
								<s:ShowMorePagerPanel addStyleNames='{style.scrollable}'
									ui:field='pagerPanel' />
								<s:RangeLabelPager ui:field='rangeLabelPager' />
								<br />
								<br />
								<g:Button ui:field='newBookButton'>
									<ui:msg key='bookListNewButton'>New book</ui:msg>
								</g:Button>
							</td>
							<td class='{style.bookFormCell}' valign='top' align='left'>
								<v:BookFormViewImpl ui:field='bookForm' />
							</td>
						</tr>
					</table>
				</td>
				<td class='{style.noteFormCell}' valign='top' align='left'>
					<v:NoteFormViewImpl ui:field='noteForm' />
				</td>
			</tr>
		</table>

	</g:HTMLPanel>
</ui:UiBinder>
