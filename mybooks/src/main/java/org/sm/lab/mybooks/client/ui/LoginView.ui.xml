<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:c='urn:import:com.google.gwt.user.cellview.client'>

  <ui:style>
    .header {
      font-size: 110%;
      font-weight: bold;
      color: #555
    }
    
    .label {
      font-weight: bold;
    }
  </ui:style>


  <g:DecoratorPanel>
	 <g:HTMLPanel>
      <table>
      	<tr>
          <td colspan='2'>
          	<br/>
          </td>
        </tr>
        <tr>
          <td colspan='2' align='center' class='{style.header}'>
            <ui:msg key='loginTitle'>Sign in to your account 123</ui:msg>
          </td>
        </tr>
      	<tr>
          <td colspan='2'>
          	<br/>
          </td>
        </tr>                
        <tr>
          <td class='{style.label}'>
            <ui:msg key='username'>Username:</ui:msg>
          </td>
          <td>
            <g:TextBox ui:field='usernameTextBox' width='200px'></g:TextBox>
          </td>
        </tr>
        <tr>
          <td class='{style.label}'>
            <ui:msg key='password'>Password:</ui:msg>
          </td>
          <td>
            <g:PasswordTextBox ui:field='passwordTextBox' width='200px'></g:PasswordTextBox>
          </td>
        </tr>
      	<tr>
          <td colspan='2'>
          	<g:CheckBox ui:field='rememberMeCheckBox'>
          		<ui:msg key='rememberMe'>Remember me on this computer</ui:msg>
          	</g:CheckBox>
          </td>
        </tr>        
      	<tr>
          <td colspan='2'>
          	<br/>
          </td>
        </tr>
        <tr>
          <td colspan='2' align='left' class='{style.header}'>
          	<g:Button ui:field='loginButton'>
              <ui:msg key='signIn'>Sign In</ui:msg>
            </g:Button>
          </td>
        </tr>
      </table>
    </g:HTMLPanel>  
  </g:DecoratorPanel>
</ui:UiBinder>
