<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
	xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:e="urn:import:org.sm.lab.mybooks.client.util.widget"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateLocales='default'>

	<ui:style>
		.header {
		font-size: 110%;
		font-weight: bold;
		color: #555
		}

		.label {
		font-weight: bold;
		}

		.noteBody {
		height: 400px;
		width: 800px;
		}

		.cellTable {
		border-bottom: 1px solid #ccc;
		text-align: left;
		margin-bottom: 4px;
		}

		.error {
		color: red;
		}
	</ui:style>

	<g:DecoratorPanel>
		<g:HTMLPanel>
			<table style="margin:30px" cellspacing="20px">
				<tr>
					<td>

						<table>
							<tr>
								<td colspan='2' align='center' class='{style.header}'>
									<ui:msg key='noteFormTitle'>Note</ui:msg>
								</td>
							</tr>
							<tr>
								<td>
									<br />
									<br />
									<br />
								</td>
							</tr>
							<tr>
								<td class='{style.label}'>
									<ui:msg key='titleFormName'>Title:</ui:msg>
								</td>
								<td>
									<g:TextBox ui:field='titleTextBox' />
								</td>
							</tr>
						</table>
					</td>
				</tr>
				<tr>
					<td colspan='2'>
						<ui:msg key='noteFormContent' class='{style.label}'>Content:</ui:msg>
						<br />
						<g:TextArea visibleLines="8" width="100%" ui:field='contentTextArea' />
					</td>
				</tr>
				<tr>
					<td>
						<br />
					</td>
					<td>
						<br />
						<g:Button ui:field='updateButton'>
							<ui:msg key='noteFormUpdateButton'>Save Note</ui:msg>
						</g:Button>
						&nbsp;
						<g:Button ui:field='deleteButton'>
							<ui:msg key='noteFormDeleteButton'>Delete Note</ui:msg>
						</g:Button>
					</td>
				</tr>
				<tr>
					<td colspan='2' align='center'>
						<g:Label styleName="{style.error}" ui:field="errorLabel" />
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:DecoratorPanel>
</ui:UiBinder>
