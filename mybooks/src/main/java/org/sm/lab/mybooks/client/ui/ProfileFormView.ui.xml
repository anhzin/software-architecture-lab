<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c='urn:import:com.google.gwt.user.cellview.client'>

	<ui:style>
	.header {
		font-size: 110%;
		font-weight: bold;
		color: #555
	}
	
	.label {
		font-weight: bold;
	}
	
	.error {
		color: red;
	}
	</ui:style>


	<g:DecoratorPanel>
		<g:HTMLPanel>
			<table>
				<tr>
					<td colspan='2'>
						<br />
					</td>
				</tr>
				<tr>
					<td colspan='2' align='center' class='{style.header}'>
						<ui:msg key='profileTitle'>Profile detail</ui:msg>
					</td>
				</tr>
				<tr>
					<td colspan='2'>
						<br />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='username'>Username:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='usernameTextBox' width='200px'></g:TextBox>
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='password'>Password:</ui:msg>
					</td>
					<td>
						<g:PasswordTextBox ui:field='passwordTextBox'
							width='200px'></g:PasswordTextBox>
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='password2'>Password2:</ui:msg>
					</td>
					<td>
						<g:PasswordTextBox ui:field='password2TextBox'
							width='200px'></g:PasswordTextBox>
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='firstName'>First Name:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='firstNameTextBox' width='200px'></g:TextBox>
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='lastName'>Last Name:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='lastNameTextBox' width='200px'></g:TextBox>
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						<ui:msg key='email'>Email:</ui:msg>
					</td>
					<td>
						<g:TextBox ui:field='emailTextBox' width='200px'></g:TextBox>
					</td>
				</tr>
				<tr>
					<td colspan='2'>
						<br />
					</td>
				</tr>
				<tr>
					<td colspan='2' align='left' class='{style.header}'>
						<g:Button ui:field='saveButton'>
							<ui:msg key='save'>Save</ui:msg>
						</g:Button>
						<g:Button ui:field='deleteButton'>
							<ui:msg key='delete'>Delete</ui:msg>
						</g:Button>
					</td>
				</tr>
				<tr>
					<td colspan='2' align='center'>
						<g:Label styleName="{style.error}" ui:field="errorLabel" />
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:DecoratorPanel>
</ui:UiBinder>
